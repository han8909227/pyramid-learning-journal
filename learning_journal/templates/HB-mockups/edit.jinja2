

{% extends "layout.jinja2" %}

{% block content %}
    <article>
      <div class="page-header">
        <h1>Edit Post</h1>
      </div>
      <form method ="POST">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">

        <div class="form-group">
          <label for="title">Title</label>
          <textarea class="form-control" name="title" rows="1">{{ journal.title }}</textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Body</label>
          <textarea class="form-control" name="body" rows="5">{{ journal.body }}</textarea>
        </div>
        <div class="form-group">
            <label for="creation_date">Written Date</label>
            <input type="date" name="creation_date" format="mm/dd/yyyy" />
        </div>
        <input type="submit" value="Edit Journal">
      </form>
    </article>
{% endblock %}

