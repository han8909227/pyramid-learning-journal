

{% extends "HB-mockups/layout.jinja2" %}
{% block content %}
   <form id='login' method="POST">
    <div class="form-group">
      <input class="form-control" name="username"  type="text" placeholder="Enter Username"></input>
    </div>
    <div class="form-group">
      <input class="form-control" name="password" type="password" placeholder="Enter Password"></input>
    </div>
    <div class="form-group">
      <input type="submit" value="Log in" />
    </div>
  </form>
{% if error %}
<h3 style="color:red;">{{ error }}</h3>
{% endif %}
{% endblock %}

